{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Users Schema",
  "type": "object",
  "properties": {
    "users": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]+$",
            "minLength": 3,
            "maxLength": 15
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[^a-zA-Z0-9]).+$"
          },
          "emails": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "email"
            },
            "minItems": 1
          },
          "age": {
            "type": "integer",
            "minimum": 13,
            "maximum": 100
          },
          "address": {
            "type": "object",
            "properties": {
              "city": {
                "type": "string",
                "minLength": 1
              },
              "street": {
                "type": "string"
              }
            },
            "required": ["city"],
            "additionalProperties": false
          },
          "hobbies": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 2
            }
          },
          "isVerified": {
            "type": "boolean",
            "default": false
          }
        },
        "required": ["username", "password", "emails", "age", "address"],
        "additionalProperties": false
      }
    }
  },
  "required": ["users"],
  "additionalProperties": false
}
