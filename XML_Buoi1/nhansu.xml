<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE company [
    <!ELEMENT company (department+)>

    <!ELEMENT department (employee+)>
    <!ATTLIST department name CDATA #REQUIRED>

    <!ELEMENT employee (name, position)>
    <!ATTLIST employee id ID #REQUIRED>

    <!ELEMENT name (#PCDATA)>
    <!ELEMENT position (#PCDATA)>
]>
<company>

    <department name="Kế toán">
        <employee id="E001">
            <name>Nguyễn Văn A</name>
            <position>Kế toán trưởng</position>
        </employee>
        <employee id="E002">
            <name>Trần Thị B</name>
            <position>Kế toán viên</position>
        </employee>
    </department>

    <department name="IT">
        <employee id="E003">
            <name>Lê Văn C</name>
            <position>Lập trình viên</position>
        </employee>
    </department>

</company>
